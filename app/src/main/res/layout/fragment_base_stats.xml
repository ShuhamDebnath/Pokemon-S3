<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    tools:context=".fragments.BaseStatsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Base Status"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_hp"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="HP"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/tv_value_hp"
            android:layout_width="34dp"
            android:layout_height="20dp"
            android:layout_margin="4dp"
            android:text="100"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_hp"
            app:layout_constraintStart_toEndOf="@+id/tv_name_hp"
            app:layout_constraintTop_toTopOf="@+id/tv_name_hp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/pb_hp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_hp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_value_hp"
            app:layout_constraintTop_toTopOf="@+id/tv_name_hp"
            app:lottie_autoPlay="false"
            app:lottie_fileName="progress-bar.json"
            app:lottie_speed="1" />

        <TextView
            android:id="@+id/tv_name_attack"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:text="Attack"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_hp" />

        <TextView
            android:id="@+id/tv_value_attack"
            android:layout_width="34dp"
            android:layout_height="20dp"
            android:layout_margin="4dp"
            android:text="100"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_attack"
            app:layout_constraintStart_toEndOf="@+id/tv_name_attack"
            app:layout_constraintTop_toTopOf="@+id/tv_name_attack" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/pb_attack"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_attack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_value_attack"
            app:layout_constraintTop_toTopOf="@+id/tv_name_attack"
            app:lottie_autoPlay="false"
            app:lottie_fileName="progress-bar.json"
            app:lottie_speed="1" />

        <TextView
            android:id="@+id/tv_name_defence"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:text="Defence"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_attack" />

        <TextView
            android:id="@+id/tv_value_defence"
            android:layout_width="34dp"
            android:layout_height="20dp"
            android:layout_margin="4dp"
            android:text="100"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_defence"
            app:layout_constraintStart_toEndOf="@+id/tv_name_defence"
            app:layout_constraintTop_toTopOf="@+id/tv_name_defence" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/pb_defence"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_defence"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_value_defence"
            app:layout_constraintTop_toTopOf="@+id/tv_name_defence"
            app:lottie_autoPlay="false"
            app:lottie_fileName="progress-bar.json"
            app:lottie_speed="1" />

        <TextView
            android:id="@+id/tv_name_speed"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:text="Speed"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_defence" />

        <TextView
            android:id="@+id/tv_value_speed"
            android:layout_width="34dp"
            android:layout_height="20dp"
            android:layout_margin="4dp"
            android:text="100"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_speed"
            app:layout_constraintStart_toEndOf="@+id/tv_name_speed"
            app:layout_constraintTop_toTopOf="@+id/tv_name_speed" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/pb_speed"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_speed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_value_speed"
            app:layout_constraintTop_toTopOf="@+id/tv_name_speed"
            app:lottie_autoPlay="false"
            app:lottie_fileName="progress-bar.json"
            app:lottie_speed="1" />

        <TextView
            android:id="@+id/tv_name_sp_att"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:text="Sp. Atk"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_speed" />

        <TextView
            android:id="@+id/tv_value_sp_att"
            android:layout_width="34dp"
            android:layout_height="20dp"
            android:layout_margin="4dp"
            android:text="100"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_sp_att"
            app:layout_constraintStart_toEndOf="@+id/tv_name_sp_att"
            app:layout_constraintTop_toTopOf="@+id/tv_name_sp_att" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/pb_sp_att"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_sp_att"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_value_sp_att"
            app:layout_constraintTop_toTopOf="@+id/tv_name_sp_att"
            app:lottie_autoPlay="false"
            app:lottie_fileName="progress-bar.json"
            app:lottie_speed="1" />

        <TextView
            android:id="@+id/tv_name_sp_def"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:text="Sp. Def"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_sp_att" />

        <TextView
            android:id="@+id/tv_value_sp_def"
            android:layout_width="34dp"
            android:layout_height="20dp"
            android:layout_margin="4dp"
            android:text="100"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_sp_def"
            app:layout_constraintStart_toEndOf="@+id/tv_name_sp_def"
            app:layout_constraintTop_toTopOf="@+id/tv_name_sp_def" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/pb_sp_def"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_sp_def"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_value_sp_def"
            app:layout_constraintTop_toTopOf="@+id/tv_name_sp_def"
            app:lottie_autoPlay="false"
            app:lottie_fileName="progress-bar.json"
            app:lottie_speed="1" />

        <TextView
            android:id="@+id/tv_name_total"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:text="Total"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_sp_def" />

        <TextView
            android:id="@+id/tv_value_total"
            android:layout_width="44dp"
            android:layout_height="20dp"
            android:layout_margin="4dp"
            android:text="1000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_total"
            app:layout_constraintStart_toEndOf="@+id/tv_name_total"
            app:layout_constraintTop_toTopOf="@+id/tv_name_total" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/pb_total"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_total"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_value_total"
            app:layout_constraintTop_toTopOf="@+id/tv_name_total"
            app:lottie_autoPlay="false"
            app:lottie_fileName="progress-bar.json"
            app:lottie_speed="1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>